{
  "name": "rmapi-js",
  "version": "9.0.0",
  "description": "JavaScript implementation of the reMarkable 1.5 api",
  "repository": "git@github.com:erikbrinkman/rmapi-js.git",
  "author": "Erik Brinkman <erik.brinkman@gmail.com>",
  "license": "MIT",
  "keywords": [
    "remarkable"
  ],
  "type": "module",
  "types": "dist/index.d.ts",
  "main": "dist/rmapi-js.esm.min.js",
  "module": "dist/rmapi-js.esm.min.js",
  "files": [
    "./dist/**/*.js",
    "./dist/**/*.d.ts"
  ],
  "scripts": {
    "doc": "typedoc",
    "doc:md": "typedoc --options typedoc.md.json && node scripts/build-docs-md.js",
    "fmt": "biome format --write",
    "lint": "tsc && biome check && typedoc --emit none",
    "export": "tsc -p tsconfig.build.json && bun build src/index.ts --minify --outfile dist/rmapi-js.esm.min.js",
    "prepack": "bun lint && bun test --coverage && bun export"
  },
  "dependencies": {
    "core-js": "^3.47.0",
    "crc-32": "^1.2.2",
    "json-stable-stringify": "^1.3.0",
    "jszip": "^3.10.1",
    "jtd-ts": "^0.2.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/bun": "^1.3.4",
    "@types/json-stable-stringify": "^1.2.0",
    "@types/uuid": "^11.0.0",
    "typedoc-plugin-markdown": "^4.2.8",
    "typedoc": "^0.28.15",
    "typescript": "~5.9.3"
  }
}
